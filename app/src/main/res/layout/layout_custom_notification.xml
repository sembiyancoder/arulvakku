<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="64dp"
    android:padding="4dp">

    <ImageView
        android:id="@+id/imageViewAppLogo"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:src="@drawable/ic_app_logo"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true"
        android:contentDescription="@string/app_name" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="6dp"
        android:layout_toEndOf="@+id/imageViewAppLogo">

        <TextView
            android:id="@+id/textViewNotificationTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/app_name"
            android:textStyle="bold"
            style="@style/TextAppearance.Compat.Notification.Title"/>

        <TextView
            android:id="@+id/textViewVerse"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Methue 12:15 \n This is sample content"
            android:layout_toStartOf="@+id/textViewShare"
            android:textColor="#000000"
            android:layout_below="@+id/textViewNotificationTitle"
            style="@style/TextAppearance.AppCompat.Small"
            app:layout_constraintTop_toBottomOf="@+id/textViewNotificationTitle" />

        <TextView
            android:id="@+id/textViewShare"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/colorAccent"
            android:text=" Share "
            android:textStyle="bold"
            android:padding="2dp"
            android:textColor="@color/white"
            android:visibility="visible"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            app:drawableEndCompat="@drawable/ic_share_black_24dp" />
    </RelativeLayout>

</RelativeLayout>